<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h2><%= @user.name %> の情報</h2>
    </div>
  </div>

  <div class='row'>

    <%= render 'public/users/sidebar', user: @user %>

    <div class='col-md-4'>
      <div class='center'>
        <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format:'jpeg', fallback:'no_profile.jpg' %>
      </div>
    </div>
    <div class='col-md-5'>
      <table class="table table-borderless">
        <tr>
          <td><label>Name</label></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><label>Kana</label></td>
          <td><%= @user.kana_name %></td>
        </tr>
        <tr>
          <td><label>Email</label></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><label>Introduction</label></td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td><label>Speciality</label></td>
          <td>
            <% @user.specialities.each do |speciality| %>
              <%= speciality.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><label>Postal Code</label></td>
          <td><%= @user.postal_code %></td>
        </tr>
        <tr>
          <td><label>Address</label></td>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <td><label>Position</label></td>
          <td>
            <% if @user.mentor_check == true %>
              <span class='text-success'>Mentor</span>
            <% else %>
              <span class='text-secondary'>User</span>
            <% end %>
          </td>
        </tr>
      </table>
      <div class='row center'>
        <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-dark" %></td>
      </div>
    </div>
  </div>
  <div>
    <% if current_user != @user %>
      <%= link_to 'chatを始める', chat_path(@user.id) %>
    <% end %>
  </div>
</div>