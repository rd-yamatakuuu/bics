<% if idea.favorited_by?(current_user) %>
  <p>
    <%= link_to idea_favorite_path(idea), method: :delete do %>
      ♥<%= idea.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to idea_favorites_path(idea), method: :post do %>
      ♡<%= idea.favorites.count %>
    <% end %>
  </p>
<% end %>