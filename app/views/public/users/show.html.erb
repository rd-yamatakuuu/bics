<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h2>Detail of <%= @user.name %></h2>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-4'>
      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_profile.jpg' %>
    </div>
    <div class='col-md-5'>
      <table class="table table-borderless">
        <tr>
          <td><label>Name</label></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><label>Kana</label></td>
          <td><%= @user.kana_name %></td>
        </tr>
        <tr>
          <td><label>Postal Code</label></td>
          <td><%= @user.postal_code %></td>
        </tr>
        <tr>
          <td><label>Address</label></td>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <td><label>Position</label></td>
          <td>
            <% if @user.mentor_check == true %>
              <span class='text-success'>Mentor</span>
            <% else %>
              <span class='text-secondary'>User</span>
            <% end %>
          </td>
        </tr>
      </table>
      <div class='row center'>
        <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-dark" %></td>
      </div>
    </div>
  </div>
</div>