<div class="container">
  <%= render 'layouts/flash' %>
  <div class="row">
    <div class="col-md-3 offset-md-1">
      <h2>Specialities</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <table class='table'>
        <thead class="thead-light bodydesign">
           <tr>
              <th class='text-white bg-dark'>Name</th>
              <th class='bg-dark'></th>
              <th class='bg-dark'></th>
           </tr>
        </thead>
        <tbody class='title bodydesign'>
          <% @specialities.each do |speciality| %>
            <tr>
              <td><%= speciality.name %></td>
              <td><%= link_to 'edit', edit_admin_speciality_path(speciality), class:'btn btn-sm btn-dark' %></td>
              <td><%= link_to 'destroy', admin_speciality_path(speciality), method: :delete, data: {confirm: 'Are you sure ?'}, class:'btn btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class='center pagination-design'><%= paginate(@specialities) %></div>
      
    </div>
    
    <div class='col-md-3 offset-md-3'>
      <div class='newitem'>
        <%= form_with model:@speciality, url:admin_specialities_path, method: :create, local:true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
  
          <div class='form-group newitem'>
            <label>name</label><br>
            <%= f.text_field :name, autofocus: true %>
          </div>
      </div>
      <div>
          <div class='form-group center'>
            <%= f.submit 'Create', class:'btn btn-dark' %>
          </div>
        <% end %>
      </div>
    </div> 
    
  </div>
</div>