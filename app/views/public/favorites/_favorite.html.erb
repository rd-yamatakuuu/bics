<% if idea.favorited_by?(current_user) %>
  <text>
    <%= link_to idea_favorites_path(idea.id), method: :delete, class:'text-danger', remote: true do %>
      ♥<%= idea.favorites.count %>
    <% end %>
  </text>
<% else %>
  <text>
    <%= link_to idea_favorites_path(idea.id), method: :post, remote: true do %>
      ♡<%= idea.favorites.count %>
    <% end %>
  </text>
<% end %>