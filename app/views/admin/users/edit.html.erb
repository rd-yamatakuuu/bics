<div class='container'>
  <div class='row'>
    <div class='col-4 offset-1'>
      <h2><%= @user.name %> 's data</h2>
    </div>
    <div class='col-md-8'></div>
  </div>
  <div class='row center'>
    <div class='mx-auto newitem'>
      <%= form_with model:@user, url: admin_user_path(@user), local:true do |f| %>
        <div class='form-group'>
          <label>Status</label><br>
          <%= f.radio_button :status, :true %>
          <%= f.label :status, '退会', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :status, :false %>
          <%= f.label :status, '有効', {value: :false, style: 'display: inline-block;'} %>
        </div>
        <div class='form-group'>
          <label>Mentor Confirm</label><br>
          <%= f.radio_button :mentor_check, :true %>
          <%= f.label :mentor_check, 'Mentor', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :mentor_check, :false %>
          <%= f.label :mentor_check, 'User', {value: :false, style: 'display: inline-block;'} %>
        </div>
    </div>
  </div>
  <div class='row center'>
    <div class='form-group center'>
          <%= f.submit 'Save', class:'btn btn-outline-dark' %>
    </div>
      <% end %>
  </div>
</div>