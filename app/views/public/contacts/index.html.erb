<div class='container'>
  <div class='row center'>
    <div class='newidea'>
      <%= form_with model:@contact, url:contacts_path, local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div>
          <label>Name</label><br>
          <%= f.text_field :name , autofocus: true %>
        </div>
        <div>
          <label>あなたのemail</label><br>
          <%= f.email_field :email, autofocus: true %>
        </div>
        <div>
          <label>message</label><br>
          <%= f.text_area :contact_message, autofocus: true, size:'60x10' %>
        </div>
    </div>
  </div>
  <div class='row center'>
    <div class='center'>
          <%= f.submit '送信', class:'btn btn-outline-dark' %>
    </div>
      <% end %>
  </div>
</div>